<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WGUStudentTracker.Views.Courses.AddCoursePage"
             Title="AddCoursePage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Label Text="Add Course" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

            <Label Text="Course Name:" FontAttributes="Bold" />
            <Entry x:Name="CourseNameEntry" Placeholder="Enter course name" />

            <Label Text="Start Date:" FontAttributes="Bold" />
            <DatePicker x:Name="StartDatePicker" />

            <Label Text="End Date:" FontAttributes="Bold" />
            <DatePicker x:Name="EndDatePicker" />

            <Label Text="Course Status:" FontAttributes="Bold" />
            <Picker x:Name="StatusPicker">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>In Progress</x:String>
                        <x:String>Completed</x:String>
                        <x:String>Dropped</x:String>
                        <x:String>Plan to Take</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Label Text="Instructor Name:" FontAttributes="Bold" />
            <Entry x:Name="InstructorNameEntry" Placeholder="e.g. Dr. Smith" />

            <Label Text="Instructor Phone:" FontAttributes="Bold" />
            <Entry x:Name="InstructorPhoneEntry" Placeholder="e.g. 555-123-4567" Keyboard="Telephone" />

            <Label Text="Instructor Email:" FontAttributes="Bold" />
            <Entry x:Name="InstructorEmailEntry" Placeholder="e.g. instructor@wgu.edu" Keyboard="Email" />

            <Button Text="Save Course"
                    Clicked="OnSaveCourseClicked"
                    BackgroundColor="#007ACC"
                    TextColor="White"
                    CornerRadius="8" />

            <Button Text="Cancel"
                    Clicked="OnCancelClicked"
                    BackgroundColor="#888"
                    TextColor="White"
                    CornerRadius="8" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>