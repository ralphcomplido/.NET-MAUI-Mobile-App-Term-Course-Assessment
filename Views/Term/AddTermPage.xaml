<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WGUStudentTracker.Views.AddTermPage"
             Title="Add Term">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Add New Term"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <Label Text="Term Title:" FontAttributes="Bold" />
        <Entry x:Name="TitleEntry"
               Placeholder="e.g., Fall 2024 Semester" />

        <Label Text="Start Date:" FontAttributes="Bold" />
        <DatePicker x:Name="StartDatePicker" />

        <Label Text="End Date:" FontAttributes="Bold" />
        <DatePicker x:Name="EndDatePicker" />

        <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
            <Button Text="Save Term"
                    Clicked="OnSaveClicked"
                    BackgroundColor="#007ACC"
                    TextColor="White" />

            <Button Text="Cancel"
                    Clicked="OnCancelClicked"
                    BackgroundColor="#888"
                    TextColor="White" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
